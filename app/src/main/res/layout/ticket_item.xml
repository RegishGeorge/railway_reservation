<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/ticket_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket ID"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/train_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Train Name"
            android:textSize="15sp"
            android:layout_below="@id/ticket_id"/>

        <TextView
            android:id="@+id/from_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure - Arrival"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:layout_below="@+id/train_name"/>

        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure Time"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:layout_below="@id/from_to"/>

        <TextView
            android:id="@+id/stop_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival Time"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:layout_below="@id/start_time"/>

        <TextView
            android:id="@+id/class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Name"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:layout_below="@id/stop_time"/>

        <TextView
            android:id="@+id/tickets_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of tickets"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:layout_below="@+id/class_name"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="@android:color/holo_green_light"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="24sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>